---
import { Image } from "astro:assets";

const { title, description, icon } = Astro.props;
---

<div class="p-5 w-full border-2 flex flex-col gap-4 rounded-xl relative">
  <div class="border-2 bg-[#D9FFA1] w-min rounded-xl p-3 absolute -top-7">
    <figure class="w-8">
      <Image src={icon} alt={title} class="w-full" />
    </figure>
  </div>
  <h1 class="text-[#1A1A1A] font-bold text-xl pt-6">{title}</h1>
  <p class="text-[#4C4C4D] font-medium text-lg">{description}</p>
</div>
