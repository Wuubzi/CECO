---
import HeadersSection from "../components/headersSection.astro";
import abstract from "../assets/abstract.svg";
import { Image } from "astro:assets";
const { HeaderText, title, description } = Astro.props;
---

<div
  class="border-2 border-black rounded-xl p-8 w-full flex flex-col gap-4 relative lg:flex-row lg:p-12 lg:gap-8"
>
  <!-- Abstract decorativo -->
  <figure class="absolute top-0 left-0">
    <Image
      src={abstract}
      alt={"Colegio de Educación por Ciclos de Oriente"}
      class="w-24 h-24 lg:w-32 lg:h-32"
    />
  </figure>

  <!-- Contenido izquierdo (título y badge) -->
  <div
    class="flex flex-col gap-4 pt-12 lg:pt-0 lg:min-w-[280px] lg:max-w-[320px] lg:pl-8"
  >
    <HeadersSection text={HeaderText} />
    <h2
      class="font-medium text-[#262626] text-center text-2xl lg:text-3xl lg:text-left leading-tight"
    >
      {title}
    </h2>
  </div>

  <!-- Contenido derecho (descripción) -->
  <div
    class="lg:flex-1 lg:flex lg:items-center lg:pl-8 lg:border-l-2 lg:border-gray-200"
  >
    <p
      class="text-[#333333] text-center font-medium text-base lg:text-lg lg:text-left lg:leading-relaxed"
    >
      {description}
    </p>
  </div>
</div>
