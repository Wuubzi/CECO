    <!-- Principal Container -->
    <div
      class="flex flex-col md:flex-row gap-8 justify-center items-center max-w-7xl mx-auto lg:gap-12"
    >
      <div
        class="flex flex-col justify-center items-center gap-5 lg:text-start lg:justify-start lg:items-start md:w-1/2 scroll-reveal"
      >
        <h2
          class="font-extrabold text-3xl text-[#1A1A1A] lg:text-5xl xl:text-6xl text-center lg:text-start"
        >
          Sintonízate con <span class="text-[#00AEEF]">K Radio.co</span>
        </h2>
        <p
          class="font-medium text-lg text-[#333333] text-center lg:text-start lg:text-xl xl:text-2xl"
